{% extends "template.html.twig" %}
{% block styleSheet %}
    <link rel="stylesheet" type="text/css" href="../../estilos-paginas/gerenciar-usuarios.css"/>
{% endblock %}
{% block body %}
        <div class="geral">
            <form method="post" action="../rodada/gerenciar.php" style="width: 700px;">
                {{mensagem}}
                <input type="hidden" name="partida" value="1"/>
                <table class="table table-bordered">
                    <thead class="thead">
                    <th>ID</th>
                    <th>Campeonato</th>
                    <th>Numero</th>
                    <th colspan="2">Gerenciar</th>
                    </thead>
                    {% for rodada in rodadas %}

                        <tbody>
                            <tr style="text-align: center;">
                                <td>{{rodada.id}}</td>
                                <td>{{rodada.campeonato_nome}} - {{rodada.campeonato_id}}</td>
                                <td>{{rodada.numero}}</td>
                                <!-- Ã© necessario que o button tenha um name-->
                                <td><button name="id_rodada" type="submit" class="btn btn-default navbar-btn" value="{{rodada.id}}">Excluir</button></td>
                                <td><a href="../rodada/editar.php?rodada_id={{rodada.id}}" class="btn btn-default navbar-btn">Editar</a></td>
                            </tr>
                        </tbody>
                    {% endfor %}
                </table>
            </form>
        </div>
{% endblock %}