{% extends "template.html.twig" %}
{% block styleSheet %}
    <link rel="stylesheet" type="text/css" href="../../estilos-paginas/gerenciar-usuarios.css"/>
{% endblock %}
{% block body %}
    <div class="geral">
        <form method="post" action="../brasileirao/gerenciar-atleta.php"style="width: 700px;">
            <input type="hidden" name="delete" value="1"/>
            {{mensagem}}
            <table class="table table-bordered">
                <thead class="thead">
                    <tr>
                        <th>ID</th>
                        <th>Nome</th>
                        <th>Data de Nascimento</th>
                        <th>Sexo</th>
                        <th>Posicao</th>
                        <th colspan="2">Gerenciar</th>
                    </tr>
                </thead>
                {% for atleta in atletas %}
                    <tr style="text-align: center;">
                        <td>{{atleta.id}}</td>
                        <td>{{atleta.nome}}</td>
                        <td>{{atleta.nascimento}}</td>
                        <td>{{atleta.sexo}}</td>
                        <td>{{atleta.posicao}}</td>
                        <!-- Ã© necessario que o button tenha um name-->
                        <td><button name="id_atleta" type="submit" class="btn btn-default navbar-btn  glyphicon glyphicon-remove" value="{{atleta.id}}">Excluir</button></td>
                        <td><a href="../brasileirao/editar-atleta.php?id={{atleta.id}}" class="btn btn-default navbar-btn glyphicon glyphicon-pencil">Editar</a></td>
                    </tr>
                {% endfor %}
            </table>
        </form>
    </div>
{% endblock %}