{% extends "template.html.twig" %}
{% block styleSheet %}
    <link rel="stylesheet" type="text/css" href="../../estilos-paginas/estilo-cadastro-noticia.css"/>
{% endblock %}
{% block body %}
    <div class="geral">
        <form class="form-horizontal-a" method="post" action="../usuarios/editar_usuario.php?id={{usuario.id}}" style="width: 700px;"> 
            <input type="hidden" name="editar" value="1"/>
            <input type="hidden" name="id" value="{{usuario.id}}"/>
            {{mensagem}}
            <h2>Dados do Usuario</h2>
            <div class="form-group-a">
                <label  class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-10-a">
                    <input name="nome" type="text" class="form-control" maxlength="60" value="{{usuario.nome}}"required>
                </div>
            </div>
            <div class="form-group-a">
                <label  class="col-sm-2 control-label">Email</label>
                <div class="col-sm-10-a">
                    <input  name="email" type="email" class="form-control" id="inputEmail3" maxlength="80" value="{{usuario.email}}"required> 
                </div>
            </div>
            <div class="form-group-a">
                <label for="inputEmail3" class="col-sm-2 control-label">Senha</label>
                <div class="col-sm-10-a">
                    <input name="senha" type="password" class="form-control" maxlength="25" value="{{usuario.senha}}"required>
                </div>
            </div>
            <div class="form-group-a">
                <label for="inputEmail3" class="col-sm-2 control-label">Data de Nascimento</label>
                <div class="col-sm-10-a">
                    <input name="data_nascimento" type="text" class="form-control" maxlength="10" value="{{usuario.data_nascimento}}"required>
                </div>
            </div>
            <div class="form-group-b">
                <div class="col-sm-offset-2 col-sm-10-a">
                    <button Type="submit" class="btn btn-default" onClick="javascript: return confirm('Realmente deseja alterar o usuario?');">Atualizar</button>
                </div>
            </div>
            <div class="col-sm-12-a col-md-12">
                <div class="form-group-b">
                    <div class="col-sm-offset-2 col-sm-12-a">
                        <a href="../usuarios/listagem_usuario.php"> <button  Type="button" class="btn btn-default" >Voltar</button></a>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}