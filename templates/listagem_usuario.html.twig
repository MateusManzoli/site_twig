{% extends "template.html.twig" %}
{% block styleSheet %}
    <link rel="stylesheet" type="text/css" href="../../estilos-paginas/gerenciar-usuarios.css"/>
{% endblock %}
{% block body %}
    <div class="geral">
        <div class="row">
            <div class="col-lg-6 col-md-8">
        <form method="post" action="../usuarios/listagem_usuario.php" >
            <input type="hidden" name="delete" value="1"/>
            {{mensagem}}
            <table class="table table-bordered">
                <thead class="thead">
                <th>ID</th>
                <th>Nome</th>
                <th>Email</th>
                <th>Senha</th>
                <th>Data de Nascimento</th>
                </thead>
                {% for usuario in usuarios %}
                    <tbody>
                        <tr>
                            <td>{{usuario.id}}</td>
                            <td>{{usuario.nome}}</td>
                            <td>{{usuario.email}}</td>
                            <td>{{usuario.senha}}</td>
                            <td>{{usuario.data_nascimento}}</td>
                            <!-- Ã© necessario que o button tenha um name-->
                            <td><button name="id_usuario" type="submit" class="btn btn-default navbar-btn" value="{{usuario.id}}">Excluir</button></td>
                            <td><a href="../usuarios/editar_usuario.php?id={{usuario.id}}" class="btn btn-default navbar-btn">Editar</a></td>
                        </tr>
                    <tbody>
                    {% endfor %}
            </table>
        </form>
    </div>
            </div>
    </div>
{% endblock %}